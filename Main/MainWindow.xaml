<Window x:Class="GroupAssignmentAlonColetonWannes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupAssignmentAlonColetonWannes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="822">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="102.009"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="282"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dgInvoiceItemDisplay" d:ItemsSource="{d:SampleData ItemCount=10}" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" CanUserSortColumns="False" Margin="0,102,0,0" Grid.RowSpan="2"/>
        <Label Content="Invoice Number: " HorizontalAlignment="Left" VerticalAlignment="Top" Width="483" Height="66" FontSize="40" FontWeight="Bold" VerticalContentAlignment="Center" Margin="0,-5,0,0"/>
        <Button Grid.Column="1" Content="Search for New Invoice" HorizontalAlignment="Left" Margin="87,8,0,0" VerticalAlignment="Top" Height="41" Width="179"/>
        <Grid Margin="10,51,228,5">
            <Label Content="Invoice Date:" HorizontalAlignment="Left" VerticalAlignment="Center" Width="115" Height="46" VerticalContentAlignment="Center" FontSize="16"/>
            <DatePicker HorizontalAlignment="Left" Margin="115,0,0,0" VerticalAlignment="Center" IsTodayHighlighted="True" IsDropDownOpen="True" SelectedDateFormat="Short" BorderThickness="3,3,3,3"/>
        </Grid>
        <Label Content="Total Cost:" HorizontalAlignment="Left" Margin="297,0,0,10" Width="94" FontSize="16" Height="35" VerticalAlignment="Bottom"/>
        <Label Content="500" HorizontalAlignment="Left" Margin="381,0,0,10" VerticalAlignment="Bottom" Width="60" FontWeight="SemiBold" Height="35" FontSize="16"/>
        <GroupBox Grid.Column="1" Header="Items" Margin="0,10,0,0" Grid.Row="1" Height="180" VerticalAlignment="Top" IsEnabled="False">
            <Grid>
                <ComboBox Margin="65,10,12,0" VerticalAlignment="Top" Height="26" BorderThickness="3,3,3,3"/>
                <Label Content="Item:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="50"/>
                <Label Content="Cost:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
                <Button Content="Add Item" Margin="175,58,12,0" VerticalAlignment="Top"/>
                <Button Content="Edit Item Collection" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" Width="118" Height="40"/>

            </Grid>
        </GroupBox>
        <Button Grid.Column="1" Content="New Invoice" HorizontalAlignment="Left" Margin="87,57,0,0" VerticalAlignment="Top" Width="179" Height="38"/>
        <Button Grid.Column="1" Content="Edit/Save Invoice" Margin="51,195,51,0" Grid.Row="1" FontWeight="SemiBold" Height="53" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="Cancel Changes" Margin="51,269,51,0" Grid.Row="1" Height="53" VerticalAlignment="Top" IsEnabled="False"/>
    </Grid>
</Window>
